#!/usr/bin/env bash

[[ $(hostname) == "antek-zenbook" ]] || exit

percent=$(acpi -b | awk '{print $4}' | sed "s/..$//")
regex="^[0-9]+$"

symbols=(󱃍 󰁺 󰁻 󰁼 󰁽 󰁾 󰁿 󰂀 󰂁 󰂂 󰁹)
level=$(( percent / 10 ))
echo -n ${symbols[level]}
echo " $percent%"
echo
if [[ $percent -ge 50 ]]; then
    echo "#DA6080"
elif [[ $percent -ge 25 ]]; then
    echo "#B47F91"
else
    echo "#FBF785"
fi
